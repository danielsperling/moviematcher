<div class="container">


<%= simple_form_for :search, url: movies_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :title, input_html: {value: ""}, placeholder:"Email" %>   
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<div class="row"> 
  <% @movies.each do |display|  %>
    <div class="col-12" id="movie-card">
      <%= image_tag display.poster.gsub(/\[/, "").gsub(/\]/, "").gsub(/\"/, "") , class: 'movie-poster' %>
      <div class="overlay overlay--blur">
        <h3><%= display.title %></h3>
        <h5> <%= display.year %></h5>
        <h6> <%= display.genre %></h6>
        <div>
          <h5><%= display.plot %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

