<div class="container">
  
  <div class="row">
    <div class="col-sm-12 col-xl-6 profile-information">
      <h1>Hello <%= current_user.username %></h1>
    </div>
    <div class="col-sm-12 col-xl-6 avatar-bio">
      <h3> <%= image_tag 'popcorn.png', class: 'avatar'%></h3>
      <% if current_user.bio == nil %>
        <h5> Edit your bio!</h5>
      <% else  %>
        <%= current_user.bio %>
      <% end %>
            <%= button_to 'Edit Profile', edit_user_registration_path, method: :get, class: "btn btn-outline-dark" %> 

    </div>
  </div>
  <% current_user.favorite_movies.each do |display| %>
    <h3> <%= display.movie.title %></h3>
  <% end %>
</div>  




