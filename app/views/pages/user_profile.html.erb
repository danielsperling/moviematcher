<div class="container">
  
  <div class="row">
    <div class="col-sm-12 col-xl-6 profile-information">
      <h1>Hello <%= current_user.username %></h1>
    </div>
    <div class="col-sm-12 col-xl-6 avatar-bio">
      <h3> <%= image_tag 'popcorn.png', class: 'avatar'%></h3>
      <% if current_user.bio == nil %>
        <h5> Edit your bio!</h5>
      <% else  %>
        <%= current_user.bio %>
      <% end %>
    </div>
  </div>


      <%= button_to 'Edit Profile', edit_user_registration_path, method: :get, class: "btn btn-outline-dark" %> 

<%= @movies.each do |display|  %>
    <div class="col-12 col-xl-4 movie-card">
      <%= image_tag 'Sexybeast.png', class: 'movie-poster' %>

      <div class="overlay">
        <h3><%= display.title %></h3>
        <h4>⭐️ <%= display.rating %></h4>
        <div>
          <h5><%= display.description %></h5>
        </div>
      </div>
    </div>

 <% end %>
</div>
  

</div>






