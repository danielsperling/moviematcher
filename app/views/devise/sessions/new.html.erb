<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
<br>
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="width: 100px;">
    <%f.label :email %><br />
    <%= f.email_field :email,:size => 60, autofocus: true, autocomplete: "email" , class:"form-label", placeholder:"Email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password,:size => 60, autocomplete: "current-password",  class:"form-label", placeholder:"Password"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me  %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-outline-dark" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>


   </div>
  </div>
</div>